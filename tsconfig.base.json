{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "checkJs": false,
    "rootDir": ".",
    "moduleResolution": "node",
    "importHelpers": true,
    "lib": ["ESNext"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "paths": {
      "@nest-microservice-kafka/shared":
      ["libs/shared/src/index.ts"],
      "@nest-microservice-kafka/shared/dto": [
        "libs/shared/src/lib/dto/index.ts"
      ],
      "@nest-microservice-kafka/shared/entity": [
        "libs/shared/src/lib/entities/index.ts"
      ],
      "@nest-microservice-kafka/shared/enum": [
        "libs/shared/src/lib/enum/index.ts"
      ],
      "@nest-microservice-kafka/shared/config": [
        "libs/shared/src/lib/config/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
